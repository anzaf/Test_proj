
name: Snyk SCA Scan

on:
  pull_request:
  workflow_dispatch:

permissions:
  contents: read

jobs:
  snyk-sca:
    runs-on: ubuntu-latest
    steps:
      - uses: actions/checkout@v4
      - uses: snyk/actions/setup@v4
      - name: Snyk test (SCA)
        env:
          SNYK_TOKEN: ${{ secrets.SNYK_TOKENS }}
        run: snyk test --all-projects --severity-threshold=high
